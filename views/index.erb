      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner" role="listbox">

      <!-- first slide -->
      <div class="item active" align="middle">
        <img class="first-slide img-cardy" src="https://fbcdn-sphotos-f-a.akamaihd.net/hphotos-ak-xap1/v/t1.0-9/12376188_10156552343810691_7893859351575364858_n.jpg?oh=7406ccb21f7386edb4f7c3834a1887f0&oe=57493CD6&__gda__=1463803779_3aa73c21f664ffef959dd901cc119476" alt="First slide">

